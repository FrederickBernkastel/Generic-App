<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.frederic.genericapp.fragments.MyPendingOrdersFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">
        <TableLayout
            android:id="@+id/pending_orders_fragment_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TableLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/pending_orders_fragment_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="20sp"
            android:paddingEnd="20sp"

            android:text="@string/item_price_total"
            android:textSize="30sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/pending_orders_fragment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/pending_orders_fragment_price_label"
            android:layout_centerVertical="true"
            android:paddingRight="20sp"


            android:textSize="60sp"
            android:textColor="#000000"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/pending_orders_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:layout_weight="1"

        android:text="@string/order_now"
        android:maxLines="1"
        android:textSize="40sp"
        android:textColor="#000000"

        android:backgroundTint="#00FF00"/>

</LinearLayout>
